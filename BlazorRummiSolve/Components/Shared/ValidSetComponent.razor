@using RummiSolve


<div class="valid-set-container">
    <div class="tiles">
        @foreach (var tile in ValidSet.Tiles)
        {
            <TileComponent Tile="tile"/>
        }
    </div>
</div>

@code {
    [Parameter] public required ValidSet ValidSet { get; set; }
}

<style>
    .valid-set-container {
        display: inline-block;
        white-space: nowrap;
        padding: 5px;
        border-radius: 5px;
    }

    .tiles {
        display: inline-flex;
    }

    .tiles .tile {
        margin: 0;
    }

</style>