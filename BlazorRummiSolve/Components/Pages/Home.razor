<style>
    .hero-section {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        color: #333;
        padding: 80px 0;
        min-height: 70vh;
        display: flex;
        align-items: center;
    }

    .hero-content {
        animation: fadeInUp 1s ease-out;
    }

    .features-section {
        background: #ffffff;
        border-top: 1px solid #e9ecef;
    }

    .feature-item {
        padding: 30px 20px;
        border-radius: 8px;
        transition: transform 0.2s ease;
    }

    .feature-item:hover {
        transform: translateY(-2px);
    }

    .feature-icon {
        font-size: 2.5rem;
        opacity: 0.8;
    }

    .btn {
        border-radius: 6px;
        font-weight: 500;
        transition: all 0.2s ease;
        border-width: 1px;
    }

    .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #495057;
        border-color: #495057;
    }

    .btn-primary:hover {
        background-color: #343a40;
        border-color: #343a40;
    }

    .open-source-section {
        background: #f8f9fa;
        border-top: 1px solid #e9ecef;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

@code {

    private void NavigateToGame()
    {
        Navigation.NavigateTo("game-setup");
    }

    private int _currentCount;

    private void IncrementCount()
    {
        _currentCount++;
    }

}